    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Iniciar",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/cpp_version/main",
            "args": ["-p", "periodos.csv", "-d", "docentes.csv", "-o", "disciplinas.csv", "-e", "estudantes.csv", "-m", "matriculas.csv", "-a", "atividades.csv", "-n", "avaliacoes.csv"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/cpp_version",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Habilitar a reformatação automática para gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}